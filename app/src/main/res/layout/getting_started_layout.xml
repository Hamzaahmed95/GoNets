<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_gradient"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="30dp"

        android:padding="40dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="Welcome, Hamza!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:src="@drawable/first"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:text="Choose a screen name"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/shape"
            android:layout_height="wrap_content"
            android:hint="Enter a screen name"/>
        </LinearLayout>

        </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="50dp"
    android:background="@android:color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/two"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Choose your skill(s)"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ball"
                    android:layout_width="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ball"/>

                <ImageView
                    android:id="@+id/bat"
                    android:layout_width="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bat"/>

                <ImageView
                    android:id="@+id/wkeeper"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/weekergloves"/>



            </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:src="@drawable/three"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chooseNets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="10dp"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/ic_input_add"
                android:text="Choose your favorite nets"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:src="@drawable/right"/>

            <TextView
                android:id="@+id/favouriteNetsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/black"
                android:text=""/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/checkBoxDeafult1"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/black"
            android:text="Email Notification"
            android:theme="@style/MyCheckBox"
            android:checked="true" />


    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/tick"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        android:gravity="right"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/tick"
        android:paddingRight="10dp"/>


</RelativeLayout>