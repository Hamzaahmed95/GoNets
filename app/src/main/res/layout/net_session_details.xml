<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#b2bdc9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:background="#00264c">
        <ImageView
            android:id="@+id/backButtonMOM"
            android:src="@drawable/leftt"
            android:layout_width="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Net Session Detail"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@android:color/white"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/TextName"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="Net Session at Rashid Latif Cricket Academy"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_gravity="center"
        android:background="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/Time"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="6:30 PM"/>
    </LinearLayout>
    <!--Here Main-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="#d7d7d7"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:text="Message from Organizer:"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:background="#000"/>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:id="@+id/MessageText"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="\nHey Guys, the cost of booking the ground is Rs. 2000 so the cost of this session will be Rs.500 per head. See you all at the ground, Iam bringing stumps, and bats, please bring your own kit."/>
                    </ScrollView>
                </LinearLayout>
        </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/MessageEditText"
                android:background="@drawable/shape2"
                android:hint="Enter message!"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/SendMessage"
                android:background="@drawable/shape2"
                android:text="Send"/>


        </LinearLayout>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                    android:background="@drawable/shape2"
                android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_margin="10dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_icon"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/Name"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Hamza Ahmed"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Organizer"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="20dp"
                            android:background="@android:color/white"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ball"
                                android:visibility="gone"
                                android:layout_width="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ball"/>

                            <ImageView
                                android:id="@+id/bat"
                                android:visibility="gone"
                                android:layout_width="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="15dp"
                                android:src="@drawable/bat"/>

                            <ImageView
                                android:id="@+id/wkeeper"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/weekergloves"/>

                        </LinearLayout>


                    </LinearLayout>

                    </LinearLayout>


                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Also going"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/black"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:background="#000"/>





                <ListView
                    android:id="@+id/messageListView2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/shape2"
                    android:layout_below="@id/li"
                    android:layout_above="@+id/linearLayout"
                    android:divider="@android:color/transparent"
                    android:transcriptMode="alwaysScroll"/>


                <TextView
                    android:id="@+id/Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am going too"
                    android:paddingTop="50dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle4"
                    android:gravity="right"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/tick"
                    android:paddingRight="10dp"/>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>