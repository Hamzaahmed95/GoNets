<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2">
        <ImageView
            android:id="@+id/backButtonMOM"
            android:src="@drawable/left"
            android:layout_width="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Net Session Detail"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/TextName"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="Net Session at Rashid Latif Cricket Academy"/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/Time"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="6:30 PM"/>

    <!--Here Main-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:text="Message from Organizer:"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:textSize="20dp"
                android:id="@+id/MessageText"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="\nHey Guys, the cost of booking the ground is Rs. 2000 so the cost of this session will be Rs.500 per head. See you all at the ground, Iam bringing stumps, and bats, please bring your own kit."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:padding="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Label:"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/MessageEditText"
                android:background="@drawable/shape2"
                android:hint="Enter message!"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/SendMessage"
                android:background="@drawable/shape2"
                android:text="Send"/>


        </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/Name"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:text="Hamza Ahmed"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Organizer"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ball"
                            android:visibility="gone"
                            android:layout_width="15dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ball"/>

                        <ImageView
                            android:id="@+id/bat"
                            android:visibility="gone"
                            android:layout_width="15dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="15dp"
                            android:src="@drawable/bat"/>

                        <ImageView
                            android:id="@+id/wkeeper"
                            android:visibility="gone"
                            android:layout_marginRight="5dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/weekergloves"/>

                    </LinearLayout>




                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="also going"
                    android:textSize="20dp"
                    android:paddingTop="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/black"/>




                <ListView
                    android:id="@+id/messageListView2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/li"
                    android:layout_above="@+id/linearLayout"
                    android:divider="@android:color/transparent"
                    android:transcriptMode="alwaysScroll"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am going too"
                    android:paddingTop="50dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle"
                    android:gravity="right"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tick"
                    android:paddingRight="10dp"/>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>